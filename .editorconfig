# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*.{java,xml,md,html}]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
quote_type = double
trim_trailing_whitespace = true
insert_final_newline = true

[*.{ts,js}]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
quote_type = single
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
max_line_length = off

[*.{yml,yaml,feature}]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
quote_type = double
trim_trailing_whitespace = true
insert_final_newline = true

[*.{json,jsonc}]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
